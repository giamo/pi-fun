# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Base controller
GET /                                   controllers.AppController.main(any = "none")

GET     /views/home                     controllers.AppController.index()

GET     /views/music                    controllers.AppController.music()

# Audio player
GET /api/player/pauseresume              controllers.AudioController.pauseResume()

GET /api/player/play-local/:filePath     controllers.AudioController.play(filePath)

GET /api/player/play-url/:url            controllers.AudioController.playURL(url)

GET /api/player/status                   controllers.AudioController.playerStatus()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

GET /*any                               controllers.AppController.main(any)